<section class="section">
        <div class="row container">
          <div class="col s12 center-align">
            <img src="https://i.pinimg.com/originals/4d/1a/e6/4d1ae67b7e418b3cf69e2a512dfda2fb.png" alt="burger" style="height: 300px">
          </div>
        </div>
        <div class="row container">
          <div class="col s12 m6">
            <ul class="collection with-header">
              <li class="collection-header"><h4>Uneaten Burgers</h4></li>
              {{#each burgers}}
              {{#unless devoured}}
              <li class="collection-item">
                <div>{{burger_name}}<a class="secondary-content"><button data-id="{{id}}" class="fas fa-utensils tooltipped devourBtn" data-tooltip="Eat it!"></button></a></div>
              {{/unless}}
              {{/each}}
            </ul>
          </div>
          <div class="col s12 m6">
            <ul class="collection with-header">
              <li class="collection-header"><h4>Devoured Burgers</h4></li>
              {{#each burgers}}
              {{#if devoured}}
              <li class="collection-item grey lighten-3">{{burger_name}}</li>
              {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
        <div class="row container">
          <div class="col m3"></div>
          <form class="col s12 m6" id="input-field">
            <div class="row">
              <div class="input-field col s12">
                <input placeholder="Cheese Burger" name="burgerName" type="text" id="create_burger" class="validate">
                <label for="create_burger">Enter a Burger You Want to Eat!</label>
              </div>
            </div>
          </form>
          <div class="col m3"></div>
        </div>   
      </section>
      